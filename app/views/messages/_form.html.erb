<%= form_for @message do |f| %>
  <div class="form_group">
    <%= f.label :to %><br>
    <%= f.text_field :to %>
  </div>

  <div class="form_group">
    <%= f.label :from %><br>
    <%= f.text_field :from %>
  </div>

  <div class="form_group">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div><br>


  <%= f.submit(:class => "btn btn-primary")%>
<% end %>
