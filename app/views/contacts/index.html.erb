<h1>Send a message to your buddy!</h1>

  <div class="row">
    <div class="col-md-6">
      <div class="well">
        <%= form_for @contact do |f| %>
          <div class="form_group">
            <%=f.label :number, "Enter a phone number" %> <br>
            <%=f.text_field :number %>
          </div>

          <div class="form_group">
            <%=f.label :number, "Enter Your Message Here:" %> <br>
            <%=f.text_field :number %>
          </div> <br>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="well">
        <h3>Contacts</h3>
        <% @contacts.each do |contact| %>
          <%= link_to contact.name, contact_path(contact) %><br>
        <% end %>
      </div>
    </div>
  </div>



